<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:contentDescription="@string/hello_world"
    android:paddingVertical="20dp"
    tools:context=".fragments.RelativeLayoutFragment">

    <View
        android:id="@+id/rel_view_1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="10dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dotted_yellow" />
    <View
        android:id="@+id/rel_view_2"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="10dp"
        android:layout_above="@id/rel_view_1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/dotted_yellow" />
    <View
        android:id="@+id/rel_view_3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dotted_yellow" />
    <View
        android:id="@+id/rel_view_4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/dotted_yellow" />

</RelativeLayout>